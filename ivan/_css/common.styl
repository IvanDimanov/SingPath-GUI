@import stylus_functions

a
  text-decoration none
  
  &:link
    color #CCC
  
  &:visited
    color #999

  &:hover
    color #F7D3A4
  
  &:active
    color #333


.commonBtn
  $width  = 8px
  $height = 23px
  
  .left
    background url("../../static/_images/common_buttons/parts/left.png") repeat-x
    float      left
    width      $width
    height     $height
  
  .middle
    background  url("../../static/_images/common_buttons/parts/middle.png") repeat-x
    font-family Arial
    color       $commonTextColor
    line-height 21px
    float       left
    height      $height
    padding     0px 5px
  
  .right
    background url("../../static/_images/common_buttons/parts/right.png") no-repeat
    float      left
    width      $width
    height     $height
  
  &:hover
    .left
      background url("../../static/_images/common_buttons/parts/left-hover.png")  no-repeat
    
    .middle
      background url("../../static/_images/common_buttons/parts/middle-hover.png") repeat-x
      color      #FFF
    
    .right
      background url("../../static/_images/common_buttons/parts/right-hover.png") no-repeat
